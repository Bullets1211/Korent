<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

       <import resource="classpath:dao-bean.xml" />

       <bean id="adminServer" class="com.korent.server.AdminServer"
             p:adminDao-ref="adminDao"
               />

       <bean id="userServer" class="com.korent.server.UserServer"
             p:notificationDao-ref="notificationDao"
             p:rentGoodsDao-ref="rentGoodsDao"
             p:userDao-ref="userDao"
             />

       <bean id="rentGoodsServer" class="com.korent.server.RentGoodsServer"
             p:userDao-ref="userDao"
             p:rentGoodsDao-ref="rentGoodsDao"
             p:notificationDao-ref="notificationDao"
             />

</beans>